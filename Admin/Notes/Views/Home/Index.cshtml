@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Notes.Models.Note>
    <header class="masthead" style="background-image: url('~/wwwroot/img/notes.jpg');width:800px;height:400px;">
    </header>
    <div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a asp-action="PostNote" asp-route-id="@item.Id">
                        <h2 class="post-title">
                            @item.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @item.Subtitle
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        @item.Author.Name
                    </p>
                </div>
                <hr>
             }
        </div>
    </div>
</div>